{
    "manifest_version": 2,
    "name": "Image Translator",
    "description": "Adds a right-click menu item to images to detect and translate text",
    "version": "1.0",
    "permissions": [
      "clipboardWrite",
      "contextMenus",
      "notifications",
      "file://*",
      "<all_urls>",
      "storage",
      "declarativeContent",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "icons": {
      "16": "images/icon.png",
      "128": "images/icon.png"
    }
}